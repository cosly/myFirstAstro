---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { createDb, quotes, customers } from '../../lib/db';
import { desc } from 'drizzle-orm';

// Fetch from database
type Quote = {
  id: string;
  quoteNumber: string;
  companyName: string;
  total: number;
  status: string;
  createdAt: Date;
};

let quoteList: Quote[] = [];

try {
  const db = createDb(Astro.locals.runtime.env.DB);

  const dbQuotes = await db
    .select({
      id: quotes.id,
      quoteNumber: quotes.quoteNumber,
      total: quotes.total,
      status: quotes.status,
      createdAt: quotes.createdAt,
      customerId: quotes.customerId,
    })
    .from(quotes)
    .orderBy(desc(quotes.createdAt));

  // Get customer names
  const customerIds = [...new Set(dbQuotes.map(q => q.customerId))];
  const dbCustomers = customerIds.length > 0
    ? await db.select().from(customers)
    : [];

  const customerMap = new Map(dbCustomers.map(c => [c.id, c.companyName]));

  quoteList = dbQuotes.map(q => ({
    id: q.id,
    quoteNumber: q.quoteNumber,
    companyName: customerMap.get(q.customerId) || 'Onbekend',
    total: q.total,
    status: q.status,
    createdAt: q.createdAt,
  }));
} catch (error) {
  console.error('Failed to fetch quotes:', error);
}

const statusColors: Record<string, string> = {
  draft: 'bg-gray-100 text-gray-800',
  sent: 'bg-blue-100 text-blue-800',
  viewed: 'bg-purple-100 text-purple-800',
  accepted: 'bg-green-100 text-green-800',
  declined: 'bg-red-100 text-red-800',
  expired: 'bg-orange-100 text-orange-800',
  paid: 'bg-emerald-100 text-emerald-800',
};

const statusLabels: Record<string, string> = {
  draft: 'Concept',
  sent: 'Verstuurd',
  viewed: 'Bekeken',
  accepted: 'Geaccepteerd',
  declined: 'Afgewezen',
  expired: 'Verlopen',
  paid: 'Betaald',
};

const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('nl-NL', { style: 'currency', currency: 'EUR' }).format(amount);
};
---

<DashboardLayout title="Offertes">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold">Offertes</h1>
        <p class="text-muted-foreground">Beheer al uw offertes</p>
      </div>
      <a
        href="/offertes/nieuw"
        class="inline-flex items-center gap-2 rounded-lg bg-tesoro-500 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-tesoro-600"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Nieuwe Offerte
      </a>
    </div>

    <!-- Filters -->
    <div class="flex flex-wrap gap-2" id="status-filters">
      <button data-status="" class="filter-btn rounded-full bg-tesoro-500 px-4 py-1.5 text-sm font-medium text-white">Alle</button>
      <button data-status="draft" class="filter-btn rounded-full border px-4 py-1.5 text-sm font-medium text-muted-foreground hover:bg-muted">Concept</button>
      <button data-status="sent,viewed" class="filter-btn rounded-full border px-4 py-1.5 text-sm font-medium text-muted-foreground hover:bg-muted">Verstuurd</button>
      <button data-status="accepted" class="filter-btn rounded-full border px-4 py-1.5 text-sm font-medium text-muted-foreground hover:bg-muted">Geaccepteerd</button>
      <button data-status="declined" class="filter-btn rounded-full border px-4 py-1.5 text-sm font-medium text-muted-foreground hover:bg-muted">Afgewezen</button>
      <button data-status="paid" class="filter-btn rounded-full border px-4 py-1.5 text-sm font-medium text-muted-foreground hover:bg-muted">Betaald</button>
    </div>

    <!-- Empty State -->
    {quoteList.length === 0 && (
      <div class="rounded-xl border bg-card p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-muted-foreground/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium">Nog geen offertes</h3>
        <p class="mt-2 text-sm text-muted-foreground">Maak je eerste offerte aan om te beginnen.</p>
        <a
          href="/offertes/nieuw"
          class="mt-4 inline-flex items-center gap-2 rounded-lg bg-tesoro-500 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-tesoro-600"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Eerste offerte maken
        </a>
      </div>
    )}

    <!-- Table -->
    {quoteList.length > 0 && (
      <div class="rounded-xl border bg-card overflow-hidden">
        <table class="w-full">
          <thead class="border-b bg-muted/50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Offerte</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Klant</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Bedrag</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Datum</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-muted-foreground uppercase tracking-wider">Acties</th>
            </tr>
          </thead>
          <tbody class="divide-y">
            {quoteList.map((quote) => (
              <tr class="hover:bg-muted/30 transition-colors" data-status={quote.status}>
                <td class="px-6 py-4">
                  <span class="font-mono text-sm">#{quote.quoteNumber}</span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-medium">{quote.companyName}</span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-medium">{formatCurrency(quote.total)}</span>
                </td>
                <td class="px-6 py-4">
                  <span class:list={['inline-flex rounded-full px-2.5 py-0.5 text-xs font-medium', statusColors[quote.status] || 'bg-gray-100 text-gray-800']}>
                    {statusLabels[quote.status] || quote.status}
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-muted-foreground">
                  {quote.createdAt.toLocaleDateString('nl-NL')}
                </td>
                <td class="px-6 py-4 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <a
                      href={`/offertes/${quote.id}`}
                      class="rounded-lg border px-3 py-1.5 text-sm transition-colors hover:bg-muted"
                    >
                      Bewerken
                    </a>
                    <button class="rounded-lg p-1.5 text-muted-foreground hover:bg-muted hover:text-foreground">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                      </svg>
                    </button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    )}
  </div>
</DashboardLayout>

<script>
  const filterButtons = document.querySelectorAll('.filter-btn');
  const tableRows = document.querySelectorAll('tbody tr[data-status]');

  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update button styles
      filterButtons.forEach(b => {
        b.classList.remove('bg-tesoro-500', 'text-white');
        b.classList.add('border', 'text-muted-foreground');
      });
      btn.classList.add('bg-tesoro-500', 'text-white');
      btn.classList.remove('border', 'text-muted-foreground');

      // Filter rows
      const statusFilter = btn.getAttribute('data-status') || '';
      const statuses = statusFilter ? statusFilter.split(',') : [];

      tableRows.forEach(row => {
        const rowStatus = row.getAttribute('data-status') || '';
        const shouldShow = statuses.length === 0 || statuses.includes(rowStatus);
        (row as HTMLElement).style.display = shouldShow ? '' : 'none';
      });
    });
  });
</script>
