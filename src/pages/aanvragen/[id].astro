---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { createDb, quoteRequests } from '../../lib/db';
import { eq } from 'drizzle-orm';
import { QuoteRequestAnalysisPanel } from '../../components/quote-request/QuoteRequestAnalysisPanel';
import { SimilarQuotesPanel } from '../../components/quote-request/SimilarQuotesPanel';
import { isEmailVerified } from '../../lib/email-verification';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/aanvragen');
}

const db = createDb(Astro.locals.runtime.env.DB);
const kv = Astro.locals.runtime.env.KV;

const request = await db.query.quoteRequests.findFirst({
  where: eq(quoteRequests.id, id),
  with: {
    customer: true,
    assignedMember: true,
  },
});

if (!request) {
  return Astro.redirect('/aanvragen');
}

// Try to get AI analysis from KV
let aiAnalysis = null;
try {
  const analysisData = await kv.get(`quote_request_ai:${id}`);
  if (analysisData) {
    aiAnalysis = JSON.parse(analysisData);
  }
} catch (e) {
  console.error('Failed to get AI analysis:', e);
}

// Check email verification status
const emailVerified = await isEmailVerified(kv, id);

const statusColors: Record<string, string> = {
  new: 'bg-red-100 text-red-800 border-red-200',
  in_progress: 'bg-yellow-100 text-yellow-800 border-yellow-200',
  quoted: 'bg-green-100 text-green-800 border-green-200',
  closed: 'bg-gray-100 text-gray-800 border-gray-200',
};

const statusLabels: Record<string, string> = {
  new: 'Nieuw',
  in_progress: 'In behandeling',
  quoted: 'Offerte gemaakt',
  closed: 'Gesloten',
};

const typeIcons: Record<string, string> = {
  website: 'üåê',
  crm_setup: '‚öôÔ∏è',
  marketing: 'üé®',
  support: 'üîß',
  other: 'üìù',
};

const typeLabels: Record<string, string> = {
  website: 'Website',
  crm_setup: 'CRM Setup',
  marketing: 'Marketing',
  support: 'Support',
  other: 'Overig',
};

const localeLabels: Record<string, { name: string; flag: string }> = {
  nl: { name: 'Nederlands', flag: 'üá≥üá±' },
  en: { name: 'English', flag: 'üá¨üáß' },
  es: { name: 'Espa√±ol', flag: 'üá™üá∏' },
};

const formatDate = (date: Date) => {
  return date.toLocaleDateString('nl-NL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  });
};
---

<DashboardLayout title={`Aanvraag - ${request.companyName || request.contactName}`}>
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <a href="/aanvragen" class="rounded-lg p-2 hover:bg-muted transition-colors">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
        <div>
          <h1 class="text-2xl font-bold">{request.companyName || request.contactName}</h1>
          <p class="text-muted-foreground">{typeIcons[request.serviceType]} {typeLabels[request.serviceType] || request.serviceType}</p>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class:list={['inline-flex rounded-full border px-3 py-1 text-sm font-medium', statusColors[request.status] || 'bg-gray-100 text-gray-800']}>
          {statusLabels[request.status] || request.status}
        </span>
        <a
          href={`/offertes/nieuw?request=${request.id}`}
          class="inline-flex items-center gap-2 rounded-lg bg-tesoro-500 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-tesoro-600"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Maak Offerte
        </a>
      </div>
    </div>

    <div class="grid gap-6 lg:grid-cols-3">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Description Card -->
        <div class="rounded-xl border bg-card p-6">
          <h2 class="text-lg font-semibold mb-4">Aanvraag Details</h2>
          <div class="space-y-4">
            <div>
              <label class="text-sm font-medium text-muted-foreground">Beschrijving</label>
              <p class="mt-1 whitespace-pre-wrap">{request.description}</p>
            </div>
            {request.budgetIndication && (
              <div>
                <label class="text-sm font-medium text-muted-foreground">Budget Indicatie</label>
                <p class="mt-1">{request.budgetIndication}</p>
              </div>
            )}
            <div class="grid gap-4 sm:grid-cols-2">
              <div>
                <label class="text-sm font-medium text-muted-foreground">Voorkeurstaal</label>
                <p class="mt-1 flex items-center gap-2">
                  <span>{localeLabels[request.locale || 'nl']?.flag}</span>
                  {localeLabels[request.locale || 'nl']?.name || 'Nederlands'}
                </p>
              </div>
              <div>
                <label class="text-sm font-medium text-muted-foreground">Ontvangen op</label>
                <p class="mt-1">{formatDate(request.createdAt)}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- AI Analysis Panel -->
        <QuoteRequestAnalysisPanel
          client:load
          requestId={id}
          initialAnalysis={aiAnalysis}
        />

        <!-- Similar Quotes Panel -->
        <SimilarQuotesPanel
          client:load
          requestId={id}
        />
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Contact Info -->
        <div class="rounded-xl border bg-card p-6">
          <h2 class="text-lg font-semibold mb-4">Contact Informatie</h2>
          <div class="space-y-3">
            <div>
              <label class="text-xs font-medium text-muted-foreground uppercase tracking-wide">Contactpersoon</label>
              <p class="mt-1 font-medium">{request.contactName}</p>
            </div>
            {request.companyName && (
              <div>
                <label class="text-xs font-medium text-muted-foreground uppercase tracking-wide">Bedrijf</label>
                <p class="mt-1">{request.companyName}</p>
              </div>
            )}
            <div>
              <label class="text-xs font-medium text-muted-foreground uppercase tracking-wide">Email</label>
              <div class="mt-1 flex items-center gap-2">
                <a href={`mailto:${request.contactEmail}`} class="text-tesoro-500 hover:underline">
                  {request.contactEmail}
                </a>
                {emailVerified ? (
                  <span class="inline-flex items-center gap-1 rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-700" title="E-mail geverifieerd">
                    <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Geverifieerd
                  </span>
                ) : (
                  <span class="inline-flex items-center gap-1 rounded-full bg-amber-100 px-2 py-0.5 text-xs font-medium text-amber-700" title="E-mail niet geverifieerd">
                    <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    Niet geverifieerd
                  </span>
                )}
              </div>
            </div>
            {request.phone && (
              <div>
                <label class="text-xs font-medium text-muted-foreground uppercase tracking-wide">Telefoon</label>
                <a href={`tel:${request.phone}`} class="mt-1 block text-tesoro-500 hover:underline">
                  {request.phone}
                </a>
              </div>
            )}
          </div>
          <div class="mt-6 pt-4 border-t space-y-2">
            <a
              href={`mailto:${request.contactEmail}`}
              class="flex items-center justify-center gap-2 w-full rounded-lg border px-4 py-2 text-sm font-medium transition-colors hover:bg-muted"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Stuur Email
            </a>
            {request.phone && (
              <a
                href={`tel:${request.phone}`}
                class="flex items-center justify-center gap-2 w-full rounded-lg border px-4 py-2 text-sm font-medium transition-colors hover:bg-muted"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Bel Nu
              </a>
            )}
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="rounded-xl border bg-card p-6">
          <h2 class="text-lg font-semibold mb-4">Acties</h2>
          <div class="space-y-2">
            <button
              id="updateStatusBtn"
              data-request-id={request.id}
              class="flex items-center justify-center gap-2 w-full rounded-lg border px-4 py-2 text-sm font-medium transition-colors hover:bg-muted"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              Status Wijzigen
            </button>
            {!request.customer && (
              <a
                href={`/klanten/nieuw?email=${encodeURIComponent(request.contactEmail)}&name=${encodeURIComponent(request.contactName)}&company=${encodeURIComponent(request.companyName || '')}`}
                class="flex items-center justify-center gap-2 w-full rounded-lg border px-4 py-2 text-sm font-medium transition-colors hover:bg-muted"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
                Maak Klant Aan
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Status Change Modal -->
  <div id="statusModal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-black/50" data-close-modal></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <div class="relative bg-white rounded-xl shadow-xl max-w-sm w-full p-6">
        <h3 class="text-lg font-semibold mb-4">Status Wijzigen</h3>
        <div class="space-y-2">
          <button data-status="new" class="status-option w-full text-left px-4 py-3 rounded-lg border hover:bg-muted transition-colors">
            <span class="inline-flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-red-500"></span>
              Nieuw
            </span>
          </button>
          <button data-status="in_progress" class="status-option w-full text-left px-4 py-3 rounded-lg border hover:bg-muted transition-colors">
            <span class="inline-flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-yellow-500"></span>
              In behandeling
            </span>
          </button>
          <button data-status="quoted" class="status-option w-full text-left px-4 py-3 rounded-lg border hover:bg-muted transition-colors">
            <span class="inline-flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-green-500"></span>
              Offerte gemaakt
            </span>
          </button>
          <button data-status="closed" class="status-option w-full text-left px-4 py-3 rounded-lg border hover:bg-muted transition-colors">
            <span class="inline-flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-gray-400"></span>
              Gesloten
            </span>
          </button>
        </div>
        <button data-close-modal class="absolute top-4 right-4 p-1 hover:bg-muted rounded">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <script>
    const modal = document.getElementById('statusModal');
    const openBtn = document.getElementById('updateStatusBtn');
    const requestId = openBtn?.dataset.requestId;

    openBtn?.addEventListener('click', () => {
      modal?.classList.remove('hidden');
    });

    document.querySelectorAll('[data-close-modal]').forEach(el => {
      el.addEventListener('click', () => {
        modal?.classList.add('hidden');
      });
    });

    document.querySelectorAll('.status-option').forEach(btn => {
      btn.addEventListener('click', async () => {
        const status = (btn as HTMLElement).dataset.status;
        if (!status || !requestId) return;

        try {
          const response = await fetch(`/api/quote-requests/${requestId}`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status }),
          });

          if (response.ok) {
            window.location.reload();
          } else {
            alert('Kon status niet wijzigen');
          }
        } catch (e) {
          alert('Er is een fout opgetreden');
        }
      });
    });
  </script>
</DashboardLayout>
