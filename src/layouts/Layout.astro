---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Tesoro CRM Offerte Applicatie' } = Astro.props;
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Tesoro CRM</title>
  </head>
  <body class="min-h-screen antialiased">
    <slot />
    <script>
      // Global error handler - sends errors to debug API
      window.onerror = function(msg, url, line, col, _error) {
        fetch('/api/debug/errors', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            path: window.location.pathname,
            error: `${msg} at ${url}:${line}:${col}`,
          }),
        }).catch(() => {});
        return false;
      };
      window.addEventListener('unhandledrejection', (e) => {
        fetch('/api/debug/errors', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            path: window.location.pathname,
            error: `Unhandled promise rejection: ${e.reason}`,
          }),
        }).catch(() => {});
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/globals.css';
</style>
