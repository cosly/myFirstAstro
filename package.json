{
  "name": "tesoro-crm-quotes",
  "type": "module",
  "version": "1.0.0",
  "description": "Tesoro CRM Offerte Applicatie",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply tesoro-quotes-db --local",
    "db:migrate:remote": "wrangler d1 execute tesoro-quotes-db --remote --file=./scripts/init-db.sql",
    "db:studio": "drizzle-kit studio",
    "setup": "bash scripts/setup-cloudflare.sh",
    "deploy": "npm run build && wrangler pages deploy dist --project-name=tesoro-quotes",
    "cf:login": "wrangler login",
    "cf:tail": "wrangler pages deployment tail --project-name=tesoro-quotes"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/cloudflare": "^12.6.11",
    "@astrojs/react": "^4.0.0",
    "@astrojs/tailwind": "^5.1.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "astro": "^5.16.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.554.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "signature_pad": "^5.0.4",
    "stripe": "^20.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^11.6.0",
    "drizzle-kit": "^0.31.7",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "wrangler": "^4.50.0"
  }
}
