            Verwijderen
          </button>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<script>
  // Service Modal
  const serviceModal = document.getElementById('service-modal');
  const serviceModalTitle = document.getElementById('service-modal-title');
  const serviceForm = document.getElementById('service-form') as HTMLFormElement;
  const serviceIdInput = document.getElementById('service-id') as HTMLInputElement;
  const serviceCategoryInput = document.getElementById('service-category') as HTMLSelectElement;
  const serviceNameInput = document.getElementById('service-name') as HTMLInputElement;
  const serviceDescriptionInput = document.getElementById('service-description') as HTMLTextAreaElement;
  const servicePriceInput = document.getElementById('service-price') as HTMLInputElement;
  const serviceUnitInput = document.getElementById('service-unit') as HTMLSelectElement;
  const serviceBtwInput = document.getElementById('service-btw') as HTMLSelectElement;

  function showServiceModal(editMode = false) {
    serviceModal?.classList.remove('hidden');
    if (serviceModalTitle) {
      serviceModalTitle.textContent = editMode ? 'Dienst Bewerken' : 'Nieuwe Dienst';
    }
  }

  function hideServiceModal() {
    serviceModal?.classList.add('hidden');
    serviceForm?.reset();
    if (serviceIdInput) serviceIdInput.value = '';
  }

  document.getElementById('add-service-btn')?.addEventListener('click', () => showServiceModal(false));
  document.getElementById('close-service-modal')?.addEventListener('click', hideServiceModal);
  document.getElementById('cancel-service-btn')?.addEventListener('click', hideServiceModal);
  document.getElementById('service-modal-backdrop')?.addEventListener('click', hideServiceModal);

  // Add service to specific category
  document.querySelectorAll('.add-service-to-category').forEach(btn => {
    btn.addEventListener('click', () => {
      const categoryId = btn.getAttribute('data-category-id');
      if (categoryId && serviceCategoryInput) {
        serviceCategoryInput.value = categoryId;
      }
      showServiceModal(false);
    });
  });

  // Edit service buttons
  document.querySelectorAll('.edit-service-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const serviceId = btn.getAttribute('data-service-id');
      const name = btn.getAttribute('data-service-name');
      const description = btn.getAttribute('data-service-description');
      const price = btn.getAttribute('data-service-price');
      const unit = btn.getAttribute('data-service-unit');
      const btw = btn.getAttribute('data-service-btw');
      const categoryId = btn.getAttribute('data-service-category');

      if (serviceIdInput) serviceIdInput.value = serviceId || '';
      if (serviceNameInput) serviceNameInput.value = name || '';
      if (serviceDescriptionInput) serviceDescriptionInput.value = description || '';
      if (servicePriceInput) servicePriceInput.value = price || '';
      if (serviceUnitInput) serviceUnitInput.value = unit || 'uur';
      if (serviceBtwInput) serviceBtwInput.value = btw || '21';
      if (serviceCategoryInput) serviceCategoryInput.value = categoryId || '';

      showServiceModal(true);
    });
  });

  // Service form submit
  serviceForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(serviceForm);
    const data = Object.fromEntries(formData.entries());
    const isEdit = Boolean(data.id);

    try {
      const url = isEdit ? `/api/services/${data.id}` : '/api/services';
      const method = isEdit ? 'PUT' : 'POST';

      const response = await fetch(url, {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Er is iets misgegaan');
      }
    } catch {
      alert('Er is iets misgegaan');
    }
  });

  // Category Modal
  const categoryModal = document.getElementById('category-modal');
  const categoryModalTitle = document.getElementById('category-modal-title');
  const categoryForm = document.getElementById('category-form') as HTMLFormElement;
  const categoryIdInput = document.getElementById('category-id') as HTMLInputElement;
  const categoryNameInput = document.getElementById('category-name') as HTMLInputElement;
  const categoryIconInput = document.getElementById('category-icon') as HTMLInputElement;

  function showCategoryModal(editMode = false) {
    categoryModal?.classList.remove('hidden');
    if (categoryModalTitle) {
      categoryModalTitle.textContent = editMode ? 'Categorie Bewerken' : 'Nieuwe Categorie';
    }
  }

  function hideCategoryModal() {
    categoryModal?.classList.add('hidden');
    categoryForm?.reset();
    if (categoryIdInput) categoryIdInput.value = '';
  }

  document.getElementById('add-category-btn')?.addEventListener('click', () => showCategoryModal(false));
  document.getElementById('close-category-modal')?.addEventListener('click', hideCategoryModal);
  document.getElementById('cancel-category-btn')?.addEventListener('click', hideCategoryModal);
  document.getElementById('category-modal-backdrop')?.addEventListener('click', hideCategoryModal);

  // Edit category buttons
  document.querySelectorAll('.edit-category-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const categoryId = btn.getAttribute('data-category-id');
      const name = btn.getAttribute('data-category-name');
      const icon = btn.getAttribute('data-category-icon');

      if (categoryIdInput) categoryIdInput.value = categoryId || '';
      if (categoryNameInput) categoryNameInput.value = name || '';
      if (categoryIconInput) categoryIconInput.value = icon || '';

      showCategoryModal(true);
    });
  });

  // Category form submit
  categoryForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(categoryForm);
    const data = Object.fromEntries(formData.entries());
    const isEdit = Boolean(data.id);

    try {
      const url = isEdit ? `/api/categories/${data.id}` : '/api/categories';
      const method = isEdit ? 'PUT' : 'POST';

      const response = await fetch(url, {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Er is iets misgegaan');
      }
    } catch {
      alert('Er is iets misgegaan');
    }
  });

  // Delete Modal
  const deleteModal = document.getElementById('delete-modal');
  const deleteMessage = document.getElementById('delete-message');
  const deleteIdInput = document.getElementById('delete-id') as HTMLInputElement;
  const deleteTypeInput = document.getElementById('delete-type') as HTMLInputElement;

  function showDeleteModal(type: 'service' | 'category', id: string, name: string) {
    deleteModal?.classList.remove('hidden');
    if (deleteMessage) {
      const itemType = type === 'service' ? 'dienst' : 'categorie';
      deleteMessage.textContent = `Weet je zeker dat je de ${itemType} "${name}" wilt verwijderen?`;
    }
    if (deleteIdInput) deleteIdInput.value = id;
    if (deleteTypeInput) deleteTypeInput.value = type;
  }

  function hideDeleteModal() {
    deleteModal?.classList.add('hidden');
    if (deleteIdInput) deleteIdInput.value = '';
    if (deleteTypeInput) deleteTypeInput.value = '';
  }

  document.getElementById('cancel-delete-btn')?.addEventListener('click', hideDeleteModal);
  document.getElementById('delete-modal-backdrop')?.addEventListener('click', hideDeleteModal);

  // Delete service buttons
  document.querySelectorAll('.delete-service-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const id = btn.getAttribute('data-service-id');
      const name = btn.getAttribute('data-service-name');
      if (id && name) showDeleteModal('service', id, name);
    });
  });

  // Delete category buttons
  document.querySelectorAll('.delete-category-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const id = btn.getAttribute('data-category-id');
      const name = btn.getAttribute('data-category-name');
      if (id && name) showDeleteModal('category', id, name);
    });
  });

  // Confirm delete
  document.getElementById('confirm-delete-btn')?.addEventListener('click', async () => {
    const id = deleteIdInput?.value;
    const type = deleteTypeInput?.value;

    if (!id || !type) return;

    try {
      const url = type === 'service' ? `/api/services/${id}` : `/api/categories/${id}`;
      const response = await fetch(url, { method: 'DELETE' });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Er is iets misgegaan');
      }
    } catch {
      alert('Er is iets misgegaan');
    }
  });
</script>
